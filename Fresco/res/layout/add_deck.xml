<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA500"
    android:orientation="vertical" >
     <Button
        android:id="@+id/bCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="Cancel"
        android:padding="20dp"
        android:text="@string/cancel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" 
        android:background="#11DD99"/>
    <Button
        android:id="@+id/bDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="Finish"
        android:padding="20dp"
        android:text="@string/done"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#11DD55" />

    <TextView
        android:id="@+id/tvDeck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#11FF66"
        android:gravity="center"
        android:padding="18.5dp"
        android:text="@string/NewDeck"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/bCancel"
        android:layout_toLeftOf="@+id/bDone"
        android:layout_alignTop="@+id/bDone"
         />

    <EditText
        android:id="@+id/deck"
        android:layout_below="@+id/tvDeck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/hint"
        android:imeOptions="actionDone"
        android:padding="20dp"
        android:background="#C0C0C0" >
    </EditText>

   
</RelativeLayout>