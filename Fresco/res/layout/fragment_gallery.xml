<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/image_margin_left_right"
        android:layout_marginRight="@dimen/image_margin_left_right"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="@string/camera"
        android:paddingTop="@dimen/card_padding_top_bottom"
        android:paddingBottom="@dimen/card_padding_top_bottom"
        android:gravity="center"
        android:layout_weight="10"
        android:src="@drawable/gallery_256" />

    <requestFocus />

    <Button
        android:id="@+id/goGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/go_gallery"
        android:layout_marginLeft="@dimen/image_margin_left_right"
        android:layout_marginRight="@dimen/image_margin_left_right"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:textSize= "20sp"
        android:textColor="@android:color/white"
        android:layout_weight="1"
        android:background="@drawable/background" />

</LinearLayout>