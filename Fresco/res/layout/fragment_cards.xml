<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF00FF" 
     >
    <TableRow
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20sp"
         >

        <ImageButton
            android:id="@+id/returnButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.2"
            android:background="@android:color/transparent"
            android:contentDescription="@string/return_button"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/deckTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="@string/deck_textview"
            android:textSize="35sp" />
    </TableRow>

    <TableRow
        android:id="@+id/main_activity_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/card_face"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >
        </LinearLayout>

    	android:layout_height="wrap_content"
    	android:gravity = "center_horizontal" >

        <TextView
            android:id="@+id/frontBackTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize = "25sp"
            android:textStyle ="italic" />
        
    </TableRow>
     <TableRow
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
    	android:layout_marginTop="15dp"
		android:layout_marginLeft="35dp"
		android:layout_marginRight="35dp"
		android:layout_marginBottom="5dp"
		android:paddingRight="0dp"
    	android:gravity="center"    	
    	android:id="@+id/main_activity_root"  >
        
        <LinearLayout
			android:id="@+id/card_face"
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="1"
			
			android:orientation="vertical"
			android:gravity="center"
			android:clickable="true"
			android:background="@drawable/background"
			android:padding="5dp" >
		</LinearLayout>
		
        <LinearLayout
            android:id="@+id/card_back"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/background"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >
        </LinearLayout>
    </TableRow>
    
     <TableRow
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="0dp" >

        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/add_button"
            android:src="@drawable/ic_input_add" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/delete_button"
            android:src="@drawable/ic_delete" />

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/edit_button"
            android:src="@drawable/edit_query" />

        <ImageButton
            android:id="@+id/reviewButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/review_button"
            android:src="@drawable/ic_menu_view" />
    	android:layout_height="wrap_content"
    	android:gravity = "center_horizontal"
    	android:layout_marginBottom="10dp" >

        <TextView
            android:id="@+id/indexTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textSize = "15sp"
            android:textStyle ="italic" />
        
    </TableRow>

</TableLayout>
