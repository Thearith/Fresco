<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom = "20dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bottom_border_custom_dialog">
        
        <ImageView
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@android:drawable/ic_dialog_info"
        	
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp" />
        
        <TextView 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Saving Confirmation"
        	android:textSize = "20sp"
        	android:textColor="#3498db"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp" 
        android:orientation="horizontal">

        <TextView
            android:id="@+id/savingMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp" />
        
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:orientation="vertical" 
	        android:layout_marginLeft="40dp">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Front Content:"
	            android:textSize="15sp"
	            android:textStyle="italic"
	            android:paddingLeft="7dp"
	            android:paddingRight="7dp"
	            android:layout_marginRight="5dp" />
	        
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:gravity="center" >
	
		        <ImageView
		            android:id="@+id/frontTabImageView"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/text_24"/>
		        
		        <TextView
		            android:id="@+id/specifyFrontTextView"
		            android:text="empty"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="15sp"
		            android:textStyle="italic|bold"/>
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	    <View android:layout_width="0dp"
	      android:layout_height="fill_parent"
	      android:layout_weight="1" />
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:orientation="vertical" 
	        android:layout_marginRight="40dp">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="7dp"
	            android:paddingRight="7dp"
	            android:text="Back Content:"
	            android:textSize="15sp"
	            android:textStyle="italic"
	            android:layout_marginRight="5dp" />
	        
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:gravity="center" >
		        
		        <ImageView
		            android:id="@+id/backTabImageView"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/text_24" />
		        
		        <TextView
		            android:id="@+id/specifyBackTextView"
		            android:text="empty"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="15sp"
		            android:textStyle="italic|bold"/>
	        
	        </LinearLayout>
	        
	    </LinearLayout>
    
    </LinearLayout>

</LinearLayout>
